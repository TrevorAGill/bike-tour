{{#partial "content"}}
    <div class="well">
        <h2>Campsite Details:</h2>
        <h5>Name: {{campsite.name}}  <a href="/campsites/{{campsite.id}}/update"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></h5>
        <h5>Rating: {{campsite.rating}}</h5>
        <h5>Cost: {{campsite.cost}}</h5>
        <h5>Showers: {{campsite.showers}}</h5>
        <h5>Food Available: {{campsite.foodAvailable}}</h5>
        <h5>Bike Repair: {{campsite.bikeRepair}}</h5>
        <h5>Reservations required: {{campsite.reservations}}</h5>
        <h5>Contact: {{campsite.phone}}</h5>
    </div>

    <p><a href="/campsites/{{campsite.id}}/reviews/new">Add a review for this campsite</a></p>

    <div class="well">
        <h2>Reviews</h2>
        {{#if reviews}}
            <table>
                <tr>
                    <th>Rating</th>
                    <th>Comment</th>
                </tr>
                {{#each reviews}}
                    <tr>
                        <td>{{rating}}</td>
                        <td>{{comment}}</td>
                    </tr>
                {{/each}}
            </table>
        {{else}}
            <p>There are no reviews of this campsite yet.</p>
        {{/if}}
    </div>


    <!--<a href="/campsite/{{campsite.id}}/delete">Delete</a>-->



{{/partial}}

{{> layout.hbs}}